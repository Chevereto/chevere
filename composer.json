{
    "name": "chevere/chevere",
    "description": "Chevere Framework",
    "homepage": "https://chevere.org",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rodolfo Berrios",
            "email": "rodolfo@chevere.org",
            "homepage": "https://chevere.org"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-ctype": "*",
        "ext-ds": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-zend-opcache": "*",
        "adhocore/cli": "^0.8",
        "kevinlebrun/colors.php": "^1.0",
        "laminas/laminas-diactoros": "^2.4",
        "league/container": "^3.3",
        "monolog/monolog": "^2.0",
        "myclabs/deep-copy": "^1.10",
        "nikic/fast-route": "^1.3",
        "php-ds/php-ds": "^1.2",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "ramsey/uuid": "^4.1",
        "thecodingmachine/safe": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4"
    },
    "autoload": {
        "files": [
            "components/Filesystem/functions.php",
            "components/Iterator/functions.php",
            "components/Routing/functions.php",
            "components/ThrowableHandler/functions.php",
            "components/Type/functions.php",
            "components/VarDump/functions.php",
            "components/Workflow/functions.php",
            "components/Writer/functions.php"
        ],
        "psr-4": {
            "Chevere\\Components\\": "components/",
            "Chevere\\Interfaces\\": "interfaces/",
            "Chevere\\Exceptions\\": "exceptions/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chevere\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "bin/chevere"
    ]
}